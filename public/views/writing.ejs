<!-- navbar -->

<!-- db insert -->

<form action="/writing" method="post">
    <!-- main -->
    <div class="container">
        <div class="mb-3" style="position: absolute;left: 500px;top: 60px;right: 500px;">
    <textarea class="form-control" name="title" id="exampleFormControlTextarea1" rows="3" placeholder="제목을 입력하세요"
              style="resize:none;border:none; height: 42px; font-size: 33px"></textarea>
            <hr>
            <textarea class="form-control" name="content" id="exampleFormControlTextarea2" rows="3"
                      style="resize:none;border:none; overflow: visible;height: 650px;"></textarea>
        </div>
    </div>

    <!-- main -->

    <footer style="position: absolute;bottom: 10px;right: 40px;">
        <!--    <button type="button" class="btn btn-primary btn-lg" style="border-radius: 25px;">완료</button>-->
        <!--    <button type="button" class="btn btn-secondary btn-lg" style="border-radius: 25px;">취소</button>-->

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"
                style="border-radius: 25px;">
            완료
        </button>
        <!-- Button trigger modal -->

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">저장</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        저장하시겠습니까?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                                style="border-radius: 25px;">취소
                        </button>
                        <button type="submit" id="saveBtn" class="btn btn-primary" style="border-radius: 25px;" >저장</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
    </footer>
</form>

<script src="http://localhost:3000/static/js/writing.js"></script>
